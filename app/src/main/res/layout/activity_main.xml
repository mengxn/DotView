<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.codego.example.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <me.codego.view.DotView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="10sp" />

        <me.codego.view.DotView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="74"
            android:textColor="#FFF"
            android:textSize="10sp" />

        <me.codego.view.DotView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="100"
            android:textColor="#FFF"
            android:textSize="10sp"
            app:dotRadius="10dp" />

        <me.codego.view.DotView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="37d"
            android:textColor="#FFF"
            android:textSize="10sp"
            app:dotColor="#00F" />

        <me.codego.view.DotView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#FFF"
            android:textSize="10sp"
            app:dotRadius="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <me.codego.view.DotLayout
            android:id="@+id/dot_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotColor="#f00"
            app:dotLocation="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World" />
        </me.codego.view.DotLayout>

        <me.codego.view.DotLayout
            android:id="@+id/dot_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:dotColor="#f00"
            app:dotTextColor="#000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />
        </me.codego.view.DotLayout>

        <me.codego.view.DotLayout
            android:id="@+id/dot_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:dotColor="#ff0"
            app:dotTextColor="#000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />
        </me.codego.view.DotLayout>

        <me.codego.view.DotLayout
            android:id="@+id/dot_layout_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:dotColor="#f00"
            app:dotTextColor="#000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />
        </me.codego.view.DotLayout>

        <me.codego.view.DotLayout
            android:id="@+id/dot_layout_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:dotPaddingStartEnd="5dp"
            app:dotPaddingTopBottom="3dp"
            app:dotRadius="3dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ff0" />
        </me.codego.view.DotLayout>

    </LinearLayout>

</LinearLayout>

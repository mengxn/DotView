<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="dotColor" format="color" />
    <attr name="dotRadius" format="dimension" />
    <attr name="dotTextColor" format="color" />
    <attr name="dotPaddingHorizontal" format="dimension" />
    <attr name="dotPaddingVertical" format="dimension" />
    <attr name="dotMarginTop" format="dimension" />
    <attr name="dotMarginEnd" format="dimension" />
    <attr name="dotTextSize" format="dimension" />
    <attr name="dotLocation" format="enum">
        <enum name="right" value="0" />
        <enum name="left" value="1" />
    </attr>

    <declare-styleable name="DotView">
        <!-- 原点半径大小（不显示数字时） -->
        <attr name="dotRadius" />
        <!-- 圆点背景色 -->
        <attr name="dotColor" />
    </declare-styleable>

    <declare-styleable name="DotLayout">
        <!-- 原点半径大小（不显示数字时） -->
        <attr name="dotRadius" />
        <!-- 圆点背景色 -->
        <attr name="dotColor" />
        <!-- 圆点前景色，即数字显示颜色 -->
        <attr name="dotTextColor" />
        <!-- 字号大小 -->
        <attr name="dotTextSize" />
        <!-- 数字前后padding值 -->
        <attr name="dotPaddingHorizontal" />
        <!-- 数字上下padding值 -->
        <attr name="dotPaddingVertical" />
        <attr name="dotMarginTop" />
        <attr name="dotMarginEnd" />
        <!-- 圆点位置：left：左侧；right：右侧 -->
        <attr name="dotLocation" />
    </declare-styleable>

</resources>
